{% extends 'base.html.twig' %}

{% block title %}Form Film
{% endblock %}

{% block body %}
	<link rel="stylesheet" href="\css\formFilm.css">
	<div class="containerAll">

		<div class="titre">
			{% if (isEditor)%}
				<h1>Formulaire Edition film</h1>
			{% else %}
				<h1>Formulaire Ajout Film</h1>
			{% endif %}
		</div>

		<div class="formFilm">

			{{ form_start(form)}}

			{{form_row(form.Title ,  {'label':'Title :'}) }}
